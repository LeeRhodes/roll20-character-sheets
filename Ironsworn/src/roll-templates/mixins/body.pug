mixin challengeDice
  .sheet-result-body.sheet-result-row
    div(data-i18n='roll-template-challenge-dice') Challenge Dice: 
    div.sheet-challenge-dice {{challenge1}} {{challenge2}}

mixin actionBody(type)
  .sheet-result-body.sheet-result-row
    div(data-i18n='roll-template-action-score') Action Score: 
    div.sheet-action-score {{#{type}}}
  +challengeDice

mixin progressBody
  .sheet-result-body.sheet-result-row
    div {{progress_type}} Progress: 
    div {{progress}}
  +challengeDice

mixin momentumBody
  .sheet-result-body.sheet-result-row
    div.sheet-momentum-title(data-i18n='roll-template-momentum') Momentum:
    div {{momentum}}